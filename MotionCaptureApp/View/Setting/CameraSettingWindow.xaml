<Window x:Class="MotionCaptureApp.View.Setting.CameraSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotionCaptureApp.View.Setting"
        mc:Ignorable="d"
        Title="CameraSettingWindow" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="300" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="카메라 설정"/>
        <Border Grid.Row="1"
                    BorderBrush="Black"
                    BorderThickness="1">
            <Image Source="{Binding Image}" />
        </Border>
        <StackPanel Grid.Row="2"
            Orientation="Horizontal" Margin="10">
            <Button Content="시작" Command="{Binding StartRecordingCommand}"/>
            <Button Content="종료" Command="{Binding StopRecordingCommand}"/>
        </StackPanel>
    </Grid>
</Window>
